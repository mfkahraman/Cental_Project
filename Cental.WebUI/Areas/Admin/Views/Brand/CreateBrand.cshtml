@using Cental.EntityLayer.Entities
@model Brand

@{
    ViewData["Title"] = "Yeni Marka Oluştur";
    Layout = "~/Areas/Admin/Views/AdminLayout/LayoutAdmin.cshtml";
}

<form method="post">

    <label>Marka Adı</label>
    <input type="text" asp-for="BrandName" class="form-control" />
    <span asp-validation-for="BrandName" class="text-danger"></span>
    <br />
    <button type="submit" class="btn btn-outline-primary"><i class="fa fa-save">Kaydet</i></button>
</form>

