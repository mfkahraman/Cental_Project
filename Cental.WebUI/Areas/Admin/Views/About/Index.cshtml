@* Views altında ViewImportsa @using Cental.EntityLayer.Entities ifadesi ekledik, artık usinge gerek yok *@

@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Views/AdminLayout/layout.cshtml";
}

<h1>Hakkımızda</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Vizyon</th>
        <th>Misyon</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.Vision</td>
            <td>@item.Mission</td>
            <td><a asp-action="DeleteAbout" asp-route-id="@item.AboutId" class="btn btn-danger">Sil</a></td>
            <td><a asp-action="UpdateAbout" asp-route-id="@item.AboutId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }
</table>

<a asp-action="CreateAbout" asp-controller="About" class="btn btn-primary">Yeni Hakkımızda Ekle</a>

