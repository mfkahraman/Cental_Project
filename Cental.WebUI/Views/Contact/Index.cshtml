@{
    ViewData["Title"] = "İletişim Sayfası";
    Layout = "~/Views/UILayout/UILayout.cshtml";
}

<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize text-primary mb-3">Bizimle İletişime Geçin</h1>
            <p class="mb-0">Aşağıdaki iletişim kanallarından bize kolayca ulaşabilirsiniz.</p>
        </div>
        <div class="row g-5">
            <div class="col-12 wow fadeInUp" data-wow-delay="0.1s">
                <div class="row g-5">
                    <div class="col-md-6 col-lg-6 col-xl-3">
                        <div class="contact-add-item p-4">
                            <div class="contact-icon mb-4">
                                <i class="fas fa-map-marker-alt fa-2x"></i>
                            </div>
                            <div>
                                <h4>Adres</h4>
                                <p class="mb-0">Örnek Mah. İstanbul, Türkiye</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="contact-add-item p-4">
                            <div class="contact-icon mb-4">
                                <i class="fas fa-envelope fa-2x"></i>
                            </div>
                            <div>
                                <h4>E-Posta</h4>
                                <p class="mb-0">info@renteks.com</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.5s">
                        <div class="contact-add-item p-4">
                            <div class="contact-icon mb-4">
                                <i class="fa fa-phone-alt fa-2x"></i>
                            </div>
                            <div>
                                <h4>Telefon</h4>
                                <p class="mb-0">+90 555 111 22 33</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.7s">
                        <div class="contact-add-item p-4">
                            <div class="contact-icon mb-4">
                                <i class="fab fa-firefox-browser fa-2x"></i>
                            </div>
                            <div>
                                <h4>Web Sitemiz</h4>
                                <p class="mb-0">www.renteks.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @await Component.InvokeAsync("_ContactSendMessage")

            <div class="col-12 col-xl-1 wow fadeInUp" data-wow-delay="0.3s">
                <div class="d-flex flex-xl-column align-items-center justify-content-center">
                    <a class="btn btn-xl-square btn-light rounded-circle mb-0 mb-xl-4 me-4 me-xl-0" href=""><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-xl-square btn-light rounded-circle mb-0 mb-xl-4 me-4 me-xl-0" href=""><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-xl-square btn-light rounded-circle mb-0 mb-xl-4 me-4 me-xl-0" href=""><i class="fab fa-instagram"></i></a>
                    <a class="btn btn-xl-square btn-light rounded-circle mb-0 mb-xl-0 me-0 me-xl-0" href=""><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>

            <div class="col-12 col-xl-5 wow fadeInUp" data-wow-delay="0.1s">
                <div class="p-5 bg-light rounded">
                    <div class="bg-white rounded p-4 mb-4">
                        <h4 class="mb-3">Merkez Şube</h4>
                        <div class="d-flex align-items-center flex-shrink-0 mb-3">
                            <p class="mb-0 text-dark me-2">Adres:</p><i class="fas fa-map-marker-alt text-primary me-2"></i><p class="mb-0">Örnek Mah. İstanbul</p>
                        </div>
                        <div class="d-flex align-items-center">
                            <p class="mb-0 text-dark me-2">Telefon:</p><i class="fa fa-phone-alt text-primary me-2"></i><p class="mb-0">+90 555 111 22 33</p>
                        </div>
                    </div>
                    <div class="bg-white rounded p-4 mb-4">
                        <h4 class="mb-3">Üsküdar Şubesi</h4>
                        <div class="d-flex align-items-center mb-3">
                            <p class="mb-0 text-dark me-2">Adres:</p><i class="fas fa-map-marker-alt text-primary me-2"></i><p class="mb-0">Altunizade, Üsküdar / İstanbul</p>
                        </div>
                        <div class="d-flex align-items-center">
                            <p class="mb-0 text-dark me-2">Telefon:</p><i class="fa fa-phone-alt text-primary me-2"></i><p class="mb-0">+90 212 444 44 44</p>
                        </div>
                    </div>
                    <div class="bg-white rounded p-4 mb-0">
                        <h4 class="mb-3">Kadıköy Şubesi</h4>
                        <div class="d-flex align-items-center mb-3">
                            <p class="mb-0 text-dark me-2">Adres:</p><i class="fas fa-map-marker-alt text-primary me-2"></i><p class="mb-0">Bostancı, Kadıköy / İstanbul</p>
                        </div>
                        <div class="d-flex align-items-center">
                            <p class="mb-0 text-dark me-2">Telefon:</p><i class="fa fa-phone-alt text-primary me-2"></i><p class="mb-0">+90 216 666 66 66</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="rounded">
                    <iframe class="rounded w-100"
                            style="height: 400px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12059.38092494732!2d29.150693649999997!3d40.91913925!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac413ec74c8ff%3A0x65b681154cfc3524!2sRitim%20%C4%B0stanbul%20AVM!5e0!3m2!1str!2str!4v1744724617333!5m2!1str!2str" 
                            loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>

        </div>
    </div>
</div>
