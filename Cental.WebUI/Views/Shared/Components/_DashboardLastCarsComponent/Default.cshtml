@model List<ResultCarDto>

<div class="col-xl-6 col-md-12">
    <div class="card table-card">
        <div class="card-header">
            <h5>Son Eklenen Araçlar</h5>
            <div class="card-header-right">
                <div class="btn-group card-option">
                    <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="feather icon-more-horizontal"></i>
                    </button>
                    <ul class="list-unstyled card-option dropdown-menu dropdown-menu-right">
                        <li class="dropdown-item full-card"><a href="#!"><span><i class="feather icon-maximize"></i> büyüt</span><span style="display:none"><i class="feather icon-minimize"></i> eski boyut</span></a></li>
                        <li class="dropdown-item minimize-card"><a href="#!"><span><i class="feather icon-minus"></i> daralt</span><span style="display:none"><i class="feather icon-plus"></i> genişlet</span></a></li>
                        <li class="dropdown-item reload-card"><a href="#!"><i class="feather icon-refresh-cw"></i> yenile</a></li>
                        <li class="dropdown-item close-card"><a href="#!"><i class="feather icon-trash"></i> kapat</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Araç</th>
                            <th>Kilometre</th>
                            <th>Yıl</th>
                            <th class="text-right">Fiyat</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-inline-block align-middle">
                                        <img src="@car.ImageUrl" alt="car image" class="img-radius wid-40 align-top m-r-15" style="width: 40px; height: 40px; object-fit: cover;" />
                                        <div class="d-inline-block">
                                            <h6>@car.ModelName</h6>
                                            <p class="text-muted m-b-0">@car.Brand?.BrandName</p>
                                        </div>
                                    </div>
                                </td>
                                <td>@car.Kilometer.ToString("N0") km</td>
                                <td>@car.Year</td>
                                <td class="text-right">
                                    <label class="badge badge-light-success">
                                        @car.Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("tr-TR"))
                                    </label>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
