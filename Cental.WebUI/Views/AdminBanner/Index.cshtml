@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Öne Çıkan Alan";
    Layout = "~/Views/AdminLayout/layout.cshtml";

}

<h3>Öne Çıkan Alan</h3>
@{
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="width:75px;height:75px" /> </td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a asp-action="DeleteBanner" asp-route-id="@item.BannerId" class="btn btn-danger"><i class="fa fa-trash">sil</i></a> </td>
            <td><a asp-action="UpdateBanner" asp-route-id="@item.BannerId" class="btn btn-info"><i class="fa fa-plus-pencil">>Güncelle</i></a> </td>
        </tr>
    }
</table>

<a asp-action="CreateBanner" asp-controller="AdminBanner" class="btn btn-primary"><i class="fa fa-pluse-circle"></i>Yeni Öne Çıkan Alan Ekle</a>