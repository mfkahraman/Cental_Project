@model List<ResultUserDto>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}


@{
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Email</th>
        <th>Roler</th>
        <th>Rol Ata</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.FullName</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>
                @foreach (var role in item.Roles)
                {
                    @role 
                    <br />
                }
            </td>
            <td><a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-info">Rol Ata</a> </td>
        </tr>
    }
</table>

